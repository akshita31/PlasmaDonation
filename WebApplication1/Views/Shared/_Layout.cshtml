<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Help Kanpur - Home</title>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/donate.css">
    <link rel="shortcut icon" type="image/png" href="~/images/th.png">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li class="logo">Help Kanpur</li>
                <li class="items"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="items"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FindDonors">Find Donors</a></li>
                <li class="items"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="RegisterAsDonor">Register as a Donor</a></li>
                <li class="items"><a href="#">More Resources</a></li>
                <li class="btn"><a href="#"><i class="fas fa-bars"></i></a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
      $(document).ready(function(){
        $('.btn').click(function(){
          $('.items').toggleClass("show");
          $('ul li').toggleClass("hide");
        });
      });
    </script>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PlasmaAvailability
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
